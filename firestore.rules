{
  "rules": {
    "whitelist": {
      ".read": false,
      ".write": false,
    },
    "users": {
      ".read": "auth != null && (auth.token.role == 'host' || auth.token.role == 'co-host')",
      ".write": false,
      ".indexOn": "role"
    },
    "sessionEnded": {
      ".read": true,
      ".write": "auth != null && auth.token.role == 'host'"
    },
    "activeUsers": {
      ".read": "auth != null",
      "hosts": {
        ".indexOn": ["state", "stateSource", "stateUpdatedAt", "lastSeen"],
        ".read": "auth != null",
        ".write": "auth != null && (auth.token.role == 'host' || auth.token.role == 'co-host')",
        "$hostId": {
          ".write": "auth != null && (
            // Allow hosts to update their own record
            (auth.token.role == 'host' || auth.token.role == 'co-host') && auth.uid == $hostId
          )"
        }
      },
      "participants": {
				".indexOn": ["state", "stateUpdatedAt", "lastSeen"],
        ".read": "auth != null",
        ".write": "auth != null",
        "$participantId": {
          ".write": "auth != null && (
            // Allow participants to update their own record
            auth.token.phone == $participantId ||
            // Allow hosts to update any participant record
            auth.token.role == 'host' || auth.token.role == 'co-host'
          )"
        }
      },
      "counts": {
        ".read": "auth != null",
        ".write": "auth != null",
        "hosts": {
          ".write": "auth != null && (auth.token.role == 'host' || auth.token.role == 'co-host')"
        },
        "participants": {
          ".write": "auth != null"
        }
      }
    }
  }
}
